# Environment Variables for Legal Document Review AI Agent

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_LLM=claude-3-sonnet  # Options: gpt-4, gpt-3.5-turbo, claude-3-sonnet, claude-3-haiku

# Vector Database Configuration
VECTOR_DB_PATH=./data/vector_db
VECTOR_DB_TYPE=chromadb  # Options: chromadb, pinecone

# Legal Database APIs (Optional)
WESTLAW_API_KEY=your_westlaw_key
LEXIS_NEXIS_API_KEY=your_lexis_key

# Application Settings
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,doc,txt

# API Configuration
API_HOST=localhost
API_PORT=8000
API_WORKERS=1

# Security Settings
SECRET_KEY=your_secret_key_here
ENABLE_AUTH=false
JWT_EXPIRATION_HOURS=24

# Storage Configuration
UPLOAD_DIR=./data/uploads
OUTPUT_DIR=./data/outputs
TEMP_DIR=./data/temp

# Performance Settings
MAX_CONCURRENT_REVIEWS=3
DOCUMENT_CHUNK_SIZE=1000
OVERLAP_SIZE=200

# Risk Assessment Thresholds
CRITICAL_RISK_THRESHOLD=80
HIGH_RISK_THRESHOLD=60
MEDIUM_RISK_THRESHOLD=40
